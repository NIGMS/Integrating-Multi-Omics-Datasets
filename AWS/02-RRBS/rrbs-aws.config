plugins {
    id 'nf-amazon'
}

profiles {
    aws {
        process {
            executor = 'awsbatch' 
            queue = 'nextflow-batch-job-queue'
            container = 'nf-core/methylseq'
            
        }
        workDir = 's3://nextflow-bucket-test/meth-tmp/'
        params.outdir = 's3://nextflow-bucket-test/meth-outputs/' 
        
        fusion.enabled = true
        wave.enabled = true
        aws.region = 'us-east-1'

    }
}