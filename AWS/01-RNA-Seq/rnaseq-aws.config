plugins {
    id 'nf-amazon'
}

profiles {
    aws {
        process {
            executor = 'awsbatch'    # Name of your compute environment
            queue = 'nextflow-batch-job-queue' # Name of your job queue
            container = 'nfcore/methylseq'
            
        }
        workDir = 's3://your_bucket_name/rna-tmp/'
        params.outdir = 's3://your_bucket_name/rna-outputs/' 
        
        fusion.enabled = true
        wave.enabled = true
        aws.region = 'us-east-1'

    }
}